.header
    background: linear-gradient(180deg, #38023b 0%, rgba(56, 2, 59, 0.56) 51%, rgba(56, 2, 59, 0) 75%);
    position: absolute
    width: 100%
    z-index: 1
    &-Container
        max-width: 980px;
        width: 100%;
        margin: 0 auto;
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 2em 1em;
        &-Logo
            margin: 0
        .menu
            ul
                margin: 0;
                padding: 0;
                list-style: none;
                display: flex;
                flex-wrap: wrap;
                li
                    display: flex;
                    border-right: 1px solid #00f080;
                    min-width: 150px;
                    text-align: center;
                    justify-content: center;
                    &:nth-child(3)
