.tabs
    background: #38023b;
    &-Container
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 2em 0;
        .tab
            display: flex;
            align-items: center;
            justify-content: space-around;
            padding: .5em 1em;
            width: 300px;
            border: 1px solid #6c446e;
            cursor: pointer
            flex-wrap: wrap
            position: relative
            transition: all .3s ease-in-out
            &:hover
                border: 1px solid #dd1b71;
            &:hover img
                opacity: 1
            &:hover:before
                content: "";
                border: 1px solid #dd1b71;
                position: absolute;
                width: 100%;
                height: 100%;
                right: 0.5em;
                top: -0.5em;
            &:before
                content: "";
                border: 1px solid transparent;
                position: absolute;
                width: 100%;
                height: 100%;
                right: 0.5em;
                top: -0.5em;
                transition: all .3s ease-in-out
            img
                margin: 0
                opacity: 0.3;
                transition: all .3s ease-in-out
            p
                color: white !important
         .active
            border: 1px solid #dd1b71;
            position: relative
            &:before
                content: "";
                border: 1px solid #dd1b71;
                position: absolute;
                width: 100%;
                height: 100%;
                right: 0.5em;
                top: -0.5em;
            img
                opacity: 1
